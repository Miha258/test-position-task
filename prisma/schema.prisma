generator client {
  provider = "prisma-client-js"
  output   = "./prisma/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PositionStatus {
  open
  closed
  liquidated
}

enum PositionSide {
  long
  short
}

model Position {
  id           String         @id @default(uuid())
  userId       String
  symbol       String
  side         String
  entry        Float
  leverage     Int
  deposit      Float
  quantity     Float
  takeProfit   Float?
  stopLoss     Float?
  liquidation  Float?
  pnl          Float?
  status       PositionStatus @default(open)
  closePrice   Float?
  closedAt     DateTime?

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

